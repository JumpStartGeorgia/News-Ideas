<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? "#{yield(:title)} > #{t('app.common.app_name')}" :
				t('app.common.app_name') %></title>
    <%= csrf_meta_tags %>
	  <%= include_gon %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
		<!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
	  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/favicon.ico', :rel => 'shortcut icon' %>
  </head>
  <body>
		<!-- facebook comments -->
		<div id="fb-root"></div>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to(t('app.common.app_name'), root_path(:locale => I18n.locale),:class=>"brand font")%>
          <div class="container nav-collapse">
            <ul class="nav">
			        <li class="dropdown">
			          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
			                <%= t('.explore_ideas') %>
			                <b class="caret"></b>
			          </a>
			          <ul class="dropdown-menu">
					        <li>
			 		         <%= link_to t('app.common.top_ideas'), explore_path("top") %>
									</li>
					        <li>
			 		         <%= link_to t('app.common.new_ideas'), explore_path("new") %>
									</li>
					        <li>
			 		         <%= link_to t('app.common.in_progress'), explore_path("in_progress") %>
									</li>
					        <li>
			 		         <%= link_to t('app.common.realized'), explore_path("realized") %>
									</li>
			          </ul>
			        </li>
							<% if @categories && !@categories.empty? %>
					      <li class="dropdown">
					        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
					              <%= t('.categories') %>
					              <b class="caret"></b>
					        </a>
					        <ul class="dropdown-menu">
										<% @categories.each do |category| %>
									    <li>
					 		         <%= link_to category.name, category_path(category) %>
											</li>
										<% end %>
				          </ul>
				        </li>
							<% end %>
							<li>
				        <%= form_tag search_path, :method => :post, :class => "navbar-search pull-left" do %>
				      		<%= text_field_tag 'q', nil, :class => "search-query", :placeholder => t('app.common.search') %>
									<i class="icon-search"></i>
				        <% end %>
							</li>
            </ul>

	          <ul class="nav pull-right">
		          <% if user_signed_in? %>
				        <li class="dropdown">
				          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
				                <%= current_user.nickname %>
				                <b class="caret"></b>
				          </a>
				          <ul class="dropdown-menu">
						        <li>
				 		         <%= link_to t('.user_profile'), user_path(current_user.id) %>
										</li>
										<% if current_user.role?(:admin) %>
						          <li>
					 		         <%= link_to t('.admin'), admin_path %>
											</li>
										<% end %>
						        <li>
				 		         <%= link_to t('.sign_out'), destroy_user_session_path, :method => :delete %>
										</li>
				          </ul>
				        </li>
							<% else %>
								<li>
									<%= link_to t('helpers.links.sign_in'), :new_user_session %>
								</li>
		          <% end %>
							<% I18n.available_locales.each do |locale| %>
								<% if locale != I18n.locale %>
									<li><%= link_to t("app.language.#{locale}"), params.merge(:locale => locale) %></li>
								<% end %>
							<% end %>
	          </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div><!--/.navbar-inner -->
			<% if user_signed_in? %>
		    <div id="navbar-idea-form">
					<%= form_tag create_idea_path, :method => :post, :class => "form-inline" do %>
							<%= hidden_field_tag 'idea_user_id', current_user.id, :name => 'idea[user_id]' %>

						<strong><%= t('app.common.post_idea') %></strong>

						<label class="control-label" for="inputPassword">
							<%= t('activerecord.attributes.idea_category.category_id') %>
						</label>
						<%= select_tag 'idea_idea_categories_attributes_0_category_id', options_from_collection_for_select(@categories, "id", "name"), :name => 'idea[idea_categories_attributes][0][category_id]' %>

						<label class="control-label" for="idea_explaination">
							<%= t('activerecord.attributes.idea.explaination') %>
						</label>
						<%= text_area_tag 'idea_explaination', nil, :rows => 2, :class => 'span5', :name => 'idea[explaination]' %>

						<% if user_signed_in? %>
							<%= submit_tag t('helpers.links.post_idea'), :class => 'btn btn-primary' %>
						<% end %>
					<% end %>
		    </div><!--/.navbar-outer -->
			<% end %>
    </div>

		<div id="wrapper">
		  <div class="container">
		    <div class="content">
		      <div class="row">
		         <div class="span9">
							<% flash.each do |key, msg| %>
								<div class="alert <%= flash_translation(key) %> fade in">
									<a href="#" data-dismiss="alert" class="close">Ã—</a>
									<%= msg %>
								</div>
							<% end %>

							<% if content_for?(:title) %>
								<div class="page-header">
								  <div class="block">
			              <h1>
											<%= image_tag(yield(:title_image), :style => 'vertical-align: middle;') if content_for?(:title_image) %>
										  <%= yield(:title) %>
									  </h1>
									</div>
								</div>
							<% end %>

	            <%= yield %>
	          </div><!--/span9-->
						<div class="span3">
							<% if @categories && !@categories.empty? %>
								<div class="well well-small">
					        <ul>
										<% @categories.each do |category| %>
									    <li>
					 		         <%= link_to category.name, category_path(category) %>
											</li>
										<% end %>
				          </ul>
								</div>
							<% end %>
						</div><!--/span3-->
		      </div><!--/row-->
		    </div><!--/content-->
		   </div> <!-- /container -->
		</div><!--/wrapper-->

    <div class="push"><!--//--></div>

    <footer class="clear">
			<div id="left">&copy; 2012</div>
		  <div id="middle">
				&nbsp;
			</div>
			<div id="right" class="clear">
				<ul>
					<li id="js_link_text">
						<%= t(".js_link_text") %>:
					</li>
					<li id="js_logo">
						<%= link_to(image_tag("jumpstart-logo.png"), "http://www.jumpstart.ge", :target => "_blank",
								:title => t(".js_link_title")	) %>
					</li>
				</ul>
			</div>
    </footer>

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
		<script type="text/javascript">
			I18n.defaultLocale = "<%= I18n.default_locale %>";
			I18n.locale = "<%= I18n.locale %>";
		</script>

		<% if Rails.env.production? %>
			<!-- insert google analytics for production site here -->
		<% elsif Rails.env.staging? %>
			<!-- google analytics -->
			<script type="text/javascript">

				var _gaq = _gaq || [];
				_gaq.push(['_setAccount', 'UA-12801815-11']);
				_gaq.push(['_trackPageview']);

				(function() {
					var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
					ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
					var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
				})();

			</script>
		<% end %>

  </body>
</html>
