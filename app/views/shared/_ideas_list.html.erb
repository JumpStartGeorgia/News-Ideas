<div class="idea_list" style="margin-top: 20px; border: solid 2px #ccc; padding: 5px;">

<% if !ideas_list || ideas_list.empty? %>
	<p>
		<%= t('.no_ideas') %>
	</p>
<% else %>
	<% ideas_list.each do |idea| %>

		<div class="idea_list_item" style="margin-bottom: 5px;">
			<div class="row">
				<div class="span6">
					<%= link_to l(idea.created_at, :format => :long), idea_path(idea) %>
				</div>
				<div class="span4">
					<%= "#{t('app.common.author')}: #{idea.user.email}" %>
				</div>
			</div>
			<div>
				<%= truncate(idea.explaination, :length => 150, :separator => ' ') %>
			</div>
			<div class="row">
				<div class="span3">
					<%= "#{t('app.common.rating')}:" %>
		      <%= image_tag('thumbs-up-grey.png') %>
		      <% diff = idea.votes_diff %>
		      <span style="margin: 0 5px; color: <%= diff[:color] %>;"><%= diff[:number] %></span>
		      <%= image_tag('thumbs-down-grey.png') %>
				</div>
				<div class="span3">
					<%= "#{t('app.common.comments')}:" %>
					0
				</div>
				<div class="span3">
					<%= link_to(image_tag("fb_share.jpg", :height => "20"),
								"http://www.facebook.com/share.php?u=#{request.protocol}#{request.host_with_port}#{request.fullpath}",
								:title => "facebook",	:target => "_blank") %>
					<%= link_to(image_tag("twitter.jpg", :height => "20"),
								"https://twitter.com/share", :title => "twitter",
								:target => "_blank") %>
				</div>
			</div>
		</div>

	<% end %>
<% end %>
</div>
